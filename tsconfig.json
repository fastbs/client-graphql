{
  "extends": "@vue/tsconfig/tsconfig.web.json",
  "include": ["env.d.ts", "src/**/*", "src/**/*.vue"],
  "exclude": ["./built/**/*"],
  "compilerOptions": {
    "allowJs": true,
    "checkJs": false,
    "outDir": "./built",
    "ignoreDeprecations": "5.0",
    "baseUrl": ".",
    "types": ["node"],
    "paths": {
      "@/*": [
        "src/*"
       ]
    }
  },

  "references": [
    {
      "path": "./tsconfig.config.json"
    }
  ]
}
